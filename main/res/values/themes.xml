<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#5B8EA5</item>
        <item name="colorPrimaryVariant">#61789E</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#2979FF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Calculator.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColor">#000524</item>
        <item name="android:windowBackground">@color/whitebg</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.Calculator.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:textColor">#DFDFDF</item>
        <item name="android:windowBackground">#00081B</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.Calculator.Child" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColor">#00154A</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:background">@drawable/bg</item>
    </style>
</resources>